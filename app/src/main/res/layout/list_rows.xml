<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/roundedlayout_white"
    android:id="@+id/simpleRow"

    >





<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/lv_playerPic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/player1000" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <TextView
        android:id="@+id/lv_playername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:text="Aaron Vandenberg"
        android:textColor="#000000"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="10sp"
        android:text="Midfielder"
        android:paddingTop="1dp"/>
    <TextView
        android:id="@+id/lv_teamPicked"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:text="Collingwood - Not Picked"
        android:paddingTop="1dp"/>

        </LinearLayout>





</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="132.6"
        android:id="@+id/lv_average"
        android:textStyle="bold" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="20 games"
         android:textColor="#000"
         android:paddingRight="5dp"
         android:id="@+id/lv_games"
         android:textSize="8sp"
         />

    </LinearLayout>
</RelativeLayout>